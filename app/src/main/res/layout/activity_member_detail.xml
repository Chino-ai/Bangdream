<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >


    <ImageView
        android:id="@+id/avatarHeader"
        android:layout_width="194dp"
        android:layout_height="243dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kasumi"
        />

    <View
        android:id="@+id/upLine"
        style="@style/Divider"
        android:layout_below="@id/avatarHeader"
        />



    <ImageView
        android:id="@+id/badges"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_badge"
        android:layout_below="@id/avatarHeader"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_toEndOf="@id/badges"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_below="@id/avatarHeader"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/txt_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/bottomLine"
        style="@style/Divider"
        android:layout_marginTop="70dp"
        android:layout_below="@id/upLine"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/bottomLine"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:contentDescription="@string/favourite" />


</RelativeLayout>